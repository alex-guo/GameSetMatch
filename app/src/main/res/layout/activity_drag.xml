<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:facebook="http://schemas.android.com/apk/lib/com.cs130.gamesetmatch"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cs130.gamesetmatch.DragActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/choice_4"
        android:id="@+id/linearLayout">

        <com.facebook.login.widget.ProfilePictureView
            android:id="@+id/option_1"
            android:layout_height="@dimen/com_facebook_profilepictureview_preset_size_small"
            android:layout_width="@dimen/com_facebook_profilepictureview_preset_size_small"
            facebook:com_facebook_preset_size="large" />

        <com.facebook.login.widget.ProfilePictureView
            android:id="@+id/option_2"
            android:layout_height="@dimen/com_facebook_profilepictureview_preset_size_small"
            android:layout_width="@dimen/com_facebook_profilepictureview_preset_size_small"
            facebook:com_facebook_preset_size="large" />

        <com.facebook.login.widget.ProfilePictureView
            android:id="@+id/option_3"
            android:layout_height="@dimen/com_facebook_profilepictureview_preset_size_small"
            android:layout_width="@dimen/com_facebook_profilepictureview_preset_size_small"
            facebook:com_facebook_preset_size="large" />

        <com.facebook.login.widget.ProfilePictureView
            android:id="@+id/option_4"
            android:layout_height="@dimen/com_facebook_profilepictureview_preset_size_small"
            android:layout_width="@dimen/com_facebook_profilepictureview_preset_size_small"
            facebook:com_facebook_preset_size="large" />

        <com.facebook.login.widget.ProfilePictureView
            android:id="@+id/option_5"
            android:layout_height="@dimen/com_facebook_profilepictureview_preset_size_small"
            android:layout_width="@dimen/com_facebook_profilepictureview_preset_size_small"
            facebook:com_facebook_preset_size="large" />



    </LinearLayout>

    <com.facebook.login.widget.ProfilePictureView
        android:id="@+id/choice_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        facebook:preset_size="small"/>

    <com.facebook.login.widget.ProfilePictureView
        android:id="@+id/choice_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choice_1"
        android:layout_toLeftOf="@+id/login_button"
        android:layout_toStartOf="@+id/login_button" />

    <com.facebook.login.widget.ProfilePictureView
        android:id="@+id/choice_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/choice_2"
        android:layout_toRightOf="@+id/login_button"
        android:layout_toEndOf="@+id/login_button" />

    <com.facebook.login.widget.ProfilePictureView
        android:id="@+id/choice_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/login_button"
        android:layout_toStartOf="@+id/login_button" />

    <com.facebook.login.widget.ProfilePictureView
        android:id="@+id/choice_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/choice_4"
        android:layout_alignLeft="@+id/choice_3"
        android:layout_alignStart="@+id/choice_3" />

    <TextView
        android:id="@+id/text_details"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/login_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/TextView01"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_below="@+id/choice_4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </TextView>
</RelativeLayout>
